{
    "env": {
        "node": true,
        "es2021": true,
        "commonjs": true
    },
    "extends": [
        "prettier",
        "airbnb-base"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "rules": {
        "prettier/prettier": "error",
        "indent": [
            "error",
            "tab"
        ],
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "warn",
            "single",
            "backtick",
            "double"
        ],
        "eqeqeq": "warn"
    }
}