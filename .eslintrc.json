{
    "env": {
        "node": true,
        "es2021": true,
        "commonjs": true
    },
    "extends": [
        "prettier",
        "airbnb-base"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "rules": {
        "prettier/prettier": "error",
        "indent": 0,
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": "off",
        "no-console": "off",
        "no-unused-expressions": "off",
        "quotes": "off",
        "eqeqeq": "warn",
        "wrap-iife": "off",
        "no-underscore-dangle": "off"
    }
}